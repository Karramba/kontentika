<div class="list-group leftblock">
    <a href="{{ path('linkgroup_new') }}" class="list-group-item active list-group-item-success"><i class="fa fa-hashtag"></i> {% trans %}linkgroup.add_new{% endtrans %}</a>
    {% if linkGroup is defined and linkGroup is not null and app.user is not null and linkGroup.owner == app.user %}
        <a href="{{ path('linkgroup_edit', {'title': linkGroup.title}) }}" class="list-group-item active list-group-item-info"><i class="fa fa-cog"></i> {% trans %}linkgroup.group_settings{% endtrans %}</a>
    {% endif %}
</div>


<div class="list-group leftblock"> 
    <div class="list-group-item">{% trans %}link.show_content_by{% endtrans %}:</div>
    <a href="{{ path('linkgroup_index') }}" class="list-group-item {{ isRouteActive(['linkgroup_index', 'linkgroup_index_page']) }}">
        <i class="fa fa-list"></i> {% trans %}linkgroup.newest{% endtrans %}
    </a>
