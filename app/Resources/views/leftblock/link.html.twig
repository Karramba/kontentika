    <div class="list-group-item">{% trans %}link.show_content_by{% endtrans %}:</div>
    <a href="{{ path('link_index') }}" class="list-group-item {% if route == 'link_index' or route == 'link_index_page' %}active{% endif %}">
        <i class="fa fa-fire"></i> {% trans %}link.best{% endtrans %}
    </a>
    <a href="{{ path('link_newest') }}" class="list-group-item {% if route == 'link_newest' or route == 'link_newest_page' %}active{% endif %}">
        <i class="fa fa-list"></i> {% trans %}link.newest{% endtrans %}
    </a>
    <a href="{{ path('link_rising') }}" class="list-group-item {% if route == 'link_rising' or route == 'link_rising_page' %}active{% endif %}">
        <i class="fa fa-list"></i> {% trans %}link.rising{% endtrans %}
    </a>
