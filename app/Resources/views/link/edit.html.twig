{% extends 'base.html.twig' %}

{% block body %}
    <div class="link">
        <div class="form well bs-component">
            {#<h1>{% trans %}link.edit{% endtrans %}</h1>#}

            {{ form_start(edit_form) }}
                {{ form_widget(edit_form) }}
                <div class="buttons">
                    <a href="{{ path('link_show', {'uniqueId': link.uniqueId, 'slug': link.slug}) }}" class="btn btn-primary">{% trans %}cancel{% endtrans %}</a>
                    <button type="submit" class="btn btn-primary">{% trans %}link.save{% endtrans %}</button>
                </div>
                <div class="clearfix"></div>
            {{ form_end(edit_form) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts 
        '@AppBundle/Resources/public/js/link.js' 
        '@AppBundle/Resources/public/js/vendor/jquery-autocomplet.min.js' 
        '@AppBundle/Resources/public/js/vendor/group.autocompleter.js' 
        filter='uglifyjs2' %}

        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
